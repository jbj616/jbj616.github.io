        <span class="n">lottos</span><span class="o">.</span><span class="na">add</span><span class="o">(</span><span class="k">new</span> <span class="nc">Lotto</span><span class="o">(</span><span class="n">getRandomNumbers</span><span class="o">(</span><span class="n">numbersInRange</span><span class="o">)));</span>
